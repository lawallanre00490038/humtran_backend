{
  "compilerOptions": {
    "typeRoots": ["./types", "./node_modules/@types"],
    "outDir": "./dist",
    "rootDir": "./src",  
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@/*": ["src/*"],
    },
    "declaration": true
  },
  "include": [
    "src/**/*",
    "src/types/express.d.ts"
  ],
  "exclude": ["node_modules", "dist", "__tests__"]
}
